<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="click"
            type="android.view.View.OnClickListener"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <include layout="@layout/layout_tool_bar1" bind:title='@{"修改提示"}' android:id="@+id/layout_tool_bar" bind:click="@{click}"/>

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="输入标题"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#333"></View>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="提示类型"/>

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="代办事项"
                android:layout_marginLeft="10dp"
                />
            <RadioButton
                android:id="@+id/rb_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="待解决事项"
                />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="提醒类型"/>
            <TextView
                android:id="@+id/tv_hint_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:hint="选择提醒类型"
                android:onClick="@{click}"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hint_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="提醒时间"/>

            <TextView
                android:id="@+id/tv_hint_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:hint="选择提醒时间"
                android:onClick="@{click}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="特定时间"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9f9f9">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:fillViewport="true"
                android:layout_marginBottom="50dp"
                android:paddingRight="15dp">

                <win.whitelife.dailytips.widget.CreateTipContentView
                    android:id="@+id/ct_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </win.whitelife.dailytips.widget.CreateTipContentView>

            </ScrollView>

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#fff"
                android:textSize="16dp"
                android:text="删除"
                android:gravity="center"
                android:background="@drawable/shape_delete_tip"
                android:layout_margin="5dp"
                android:onClick="@{click}"/>
        </FrameLayout>

    </LinearLayout>

</layout>